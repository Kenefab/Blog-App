<%- include ('./partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>

    <div class="ui top attached">
        <div class="item">

            <div id="dateSpace" class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>

            <img class="ui centered rounded image" src="<%= blog.image %>" alt="Blog Image">
            
            <div id="bodySpace" class="description">
                <p><%- blog.body %></p>
            </div>

            <a class="ui green basic button" href="/blogs/<%= blog.id %>/edit">Edit</a>

            <form id="delete" action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
    
</div>

<%- include ('./partials/footer') %>